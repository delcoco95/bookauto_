{
  "name": "bookauto",
  "version": "1.0.0",
  "description": "Marketplace de type Planity pour auto, plomberie, serrurerie",
  "scripts": {
    "dev": "npm run dev --prefix frontend",         
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "nodemon backend/server.js",
    "dev:db": "docker compose up -d mongodb",
    "dev:local": "npm run dev:db && npm run dev:backend", 
    "build": "npm run build --prefix frontend",
    "start": "npm run preview --prefix frontend",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write ."
  },
  "keywords": ["marketplace", "booking", "auto", "plomberie", "serrurerie"],
  "author": "Nedj Belloum & Hedi",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5"
  }
}